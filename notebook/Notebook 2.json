				"cell_type": "code",
				"source": [
					"from pyspark.sql.functions import regexp_replace, avg, when, col\n",
					"\n",
					"data = data.withColumn(\"Name\", regexp_replace(\"Name\", \"Mr. |Ms. |Mrs. |Miss \", \"\"))\n",
					"\n",
					"#highFare column\n",
					"avg_fare = data.select(avg(\"Fare\")).collect()[0][0]\n",
					"\n",
					"data = data.withColumn(\"highFare\", when(data.Fare> avg_fare,\n",
					" \"1\" ).otherwise(0))\n",
					""
				],
				"execution_count": 9
			},
			{
				"cell_type": "code",
